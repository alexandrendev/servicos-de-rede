options {
    directory "/var/cache/bind";

    // Escutar em todas as interfaces
    listen-on { any; };
    listen-on-v6 { any; };

    // Permitir consultas de qualquer lugar
    allow-query { any; };

    // Encaminhadores (opcional, pode usar DNS p√∫blicos)
    forwarders {
        8.8.8.8;
        8.8.4.4;
    };

    dnssec-validation auto;

    auth-nxdomain no;    # conform to RFC1035
    listen-on { any; };
};